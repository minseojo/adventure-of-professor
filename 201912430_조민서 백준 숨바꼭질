#include <bits/stdc++.h>

using namespace std;
int N,K;
int arr[1000][1000];
bool check[1000][1000];

int bfs(int N, int K)
{
	int size,cnt=0;
	queue<int> q;
	q.push(N);

	while(1) {
		size = q.size();
		for(int i=0; i<size; i++) {
			N = q.front();
			q.pop();
			if(N==K)
				return cnt;
			if(N-1<100001 && !check[N-1]) {
				check[N-1]=true;
				q.push(N-1);
			}
			if(N+1<100001 && !check[N+1]) {
				check[N+1];
				q.push(N+1);
			}
			if(N*2<100001 && !check[N*2]) {
				check[N*2]=true;
				q.push(N*2);
			}
		}
		cnt++;
	}
}

int main()
{
	cin >> N >> K;
	cout << bfs(N, K);
	
	return 0;	
}
